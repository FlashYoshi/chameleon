<ivysettings>
        <properties file="ivy.properties"/>
        <properties file="ivy.default.properties"/>
	<settings	defaultCache="${ivy.cache.dir}"	
			defaultResolver="pubchameleon"
			defaultConflictManager="all" />		<!-- in order to get all revisions without any eviction -->
	<resolvers>
      <sftp keyFile="${ssh.keyfile}" user="${pubchameleon.user}" host="${pubchameleon.repository.host}" name="pubchameleon" m2compatible="true">
  			<ivy pattern="${pubchameleon.repository.dir}/[organisation]/[module]/ivys/ivy-[revision].xml"/>
  			<artifact pattern="${pubchameleon.repository.dir}/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]"/>
  		</sftp>
		<ibiblio name="maven" m2compatible="true" />
	</resolvers>
</ivysettings>
